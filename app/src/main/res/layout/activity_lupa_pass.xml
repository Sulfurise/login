<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context=".LupaPassActivity">
    <LinearLayout
        android:id="@+id/linearLayoutEditEmail"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtBantuan"
                android:fontFamily="@font/poppins_extrabold"
                android:layout_width="394dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="3dp"
                android:gravity="left"
                android:padding="20dp"
                android:text="Lupa Kata Sandi"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/imgBacklupaPass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="-1dp"
                android:layout_marginTop="7dp"
                android:background="@color/grey"
                android:padding="20dp"
                android:src="@drawable/left_arrow" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="316dp"
            android:layout_height="393dp"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="396dp"
            android:background="@drawable/inputext"
            android:elevation="10dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout1"
            app:layout_constraintVertical_bias="1.0">




            <TextView
                android:id="@+id/textLupaKataSandi"
                android:layout_width="326dp"
                android:layout_height="57dp"
                android:fontFamily="@font/poppins_bold"
                android:gravity="center"
                android:text="Lupa Kata Sandi"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textLupaKataSandi1"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center"
                android:text="Masukkan email anda dan konfirmasi"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/inputext"
                android:paddingBottom="5dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editEmailLupa"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/inputext"
                    android:backgroundTint="@color/grey"
                    android:hint="Email"
                    android:paddingBottom="5dp" />
            </com.google.android.material.textfield.TextInputLayout>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_KirimEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins_regular"
                android:textSize="10sp"
                android:layout_margin="20dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:background="@drawable/btn_onboarding"
                android:text="Kirim Email" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>