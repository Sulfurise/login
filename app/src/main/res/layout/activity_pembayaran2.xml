<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey">


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnLanjut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:background="@drawable/btn_onboarding"
        android:text="LANJUT"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:fontFamily="@font/poppins_semibold"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="627dp" />

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/txtPembayaran"
            android:layout_width="394dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="90dp"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/poppins_extrabold"
            android:gravity="left"
            android:padding="20dp"
            android:text="Pembayaran"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/imgBackTentangKami"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="-1dp"
            android:layout_marginTop="7dp"
            android:background="@color/grey"
            android:padding="20dp"
            android:src="@drawable/left_arrow"
            android:contentDescription="TODO" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayoutTransaksi1"
        android:layout_width="311dp"
        android:layout_height="190dp"
        android:layout_gravity="center"
        android:background="@drawable/inputext"
        android:elevation="10dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="143dp"
        tools:ignore="MissingConstraints">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Kode Pembayaran Anda Adalah"
            android:layout_gravity="center"
            android:fontFamily="@font/poppins_bold"
            android:textSize="15sp"
            android:textColor="@color/black"
            tools:ignore="ExtraText">
        </TextView>
        <TextView
            android:id="@+id/btn_salin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Salin"
            android:layout_marginStart="250dp"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="15sp"
            tools:ignore="ExtraText,RtlHardcoded">
        </TextView>
        <TextView
            android:id="@+id/kodePembayaran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="08345726348262"
            android:layout_gravity="center"
            android:fontFamily="@font/poppins_bold"
            android:textSize="25sp"
            android:textColor="@color/black"
            tools:ignore="ExtraText">
        </TextView>
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
        android:text="Silahkan bayar sebelum 5 jam kedepan dan bayar sesuai dengan piilhan yang anda buat"
        android:layout_gravity="center"
        android:fontFamily="@font/poppins_regular"
        android:textSize="15sp"
        android:textColor="@color/black"
        tools:ignore="ExtraText">
    </TextView>




    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>