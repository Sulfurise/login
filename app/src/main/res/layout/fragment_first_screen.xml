<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".onboarding.screens.FirstScreen">


    <ImageView
        android:id="@+id/image_onboarding"
        android:layout_width="632dp"
        android:layout_height="934dp"
        android:src="@drawable/onboarding1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.211" />

    <TextView
        android:id="@+id/text_onboarding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="124dp"
        android:layout_marginBottom="248dp"
        android:text="@string/lorem"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/image_onboarding"
        app:layout_constraintStart_toStartOf="@+id/image_onboarding" />

    <androidx.appcompat.widget.AppCompatButton
        android:minWidth="120dp"
        android:id="@+id/button_onboarding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="132dp"
        android:layout_marginBottom="130dp"
        android:background="@drawable/btn_onboarding"
        android:letterSpacing="0"
        android:text="@string/btn_lanjut"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/image_onboarding"
        app:layout_constraintEnd_toEndOf="@+id/image_onboarding" />


</androidx.constraintlayout.widget.ConstraintLayout>