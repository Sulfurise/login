                    <TextView
                        android:id="@+id/textNamaRiwayat3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Messi"
                        android:textColor="@color/black"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/textTanggalRiwayat3"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="20-23 April 2023"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </LinearLayout>

                <!--                Text Kanan-->
                <LinearLayout
                    android:layout_width="191dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:gravity="end"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textHargaRiwayat3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Rp600.000"
                        android:textColor="@color/black"
                        android:textSize="17sp" />


                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnRiwayat3"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/btn_onboarding"
                        android:backgroundTint="@color/success"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Selesai"
                        android:textColor="@color/black"
                        android:textSize="10sp" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>